    "url": "git+https://github.com/noravitkai/random-acts-of-kindness-api.git"
  },
  "author": "noravitkai",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/noravitkai/random-acts-of-kindness-api/issues"
  },
  "homepage": "https://github.com/noravitkai/random-acts-of-kindness-api#readme",
  "nodemonConfig": {
    "verbose": false,
    "watch": [
      "src"
